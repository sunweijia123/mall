<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuhan.mall.dao.ClientMapper">

    <insert id="addClient" parameterType="com.wuhan.mall.entity.Client">
        insert into client
        value(
            0,
            #{name},
            #{phone},
            #{address},
            #{houseInfo},
            #{peopleInfo},
            #{productInfo},
            now(),
            now()
        )
    </insert>

    <delete id="delClient" parameterType="com.wuhan.mall.entity.Client">
        delete from client
        where id=#{id}
    </delete>

    <update id="modifyClient" parameterType="com.wuhan.mall.entity.Client">
        update client
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="houseInfo != null">
                houseInfo = #{houseInfo},
            </if>
            <if test="peopleInfo != null">
                peopleInfo = #{peopleInfo},
            </if>
            <if test="productInfo != null">
                productInfo = #{productInfo},
            </if>
           updateTime = now()
        </trim>
        where id = #{id}
    </update>

    <select id="getClient" resultType="com.wuhan.mall.entity.Client">
        select id, name, phone, address, houseInfo, peopleInfo, productInfo from client where id = #{id}
    </select>

    <select id="getClientList" resultType="com.wuhan.mall.entity.Client">
        select id, name, phone, address, houseInfo, peopleInfo, productInfo from client order by createTime desc
    </select>
</mapper>