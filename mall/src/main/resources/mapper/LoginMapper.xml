<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuhan.mall.dao.LoginMapper">
    <select id="login" resultType="com.wuhan.mall.entity.User">
       select u.id,u.name,u.avatar from user_account acac join user u ON u.id = acac.userId  WHERE
        acac.loginAccont =#{loginAccont}
        AND acac.password = #{password}
       </select>

    <insert id="register" useGeneratedKeys="true" keyProperty="cameraNo" parameterType="User">
        insert into user value (#{name},#{avatar},#{createTime},#{updateTime});
    </insert>

    <insert id="registerLoginInfo" parameterType="User">
        insert into user_account value (#{userId},#{loginAccont},#{password},#{createTime},#{updateTime});
    </insert>

    <update id="modifyPassword">
        update user_account
        set password = #{newPassword}
        , updateTime = now()
        where userId = #{userId}
    </update>
</mapper>